{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "str_index_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "mynGram"
            ]
          },
          "new_index_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "ngramAll"
            ]
          },
          "str_search_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "standard",
              "lowercase"
            ]
          }
        },
        "filter": {
          "mynGram": {
            "type": "nGram",
            "min_gram": 2,
            "max_gram": 20
          },
          "ngramAll": {
            "type": "nGgram",
            "min_gram": 1,
            "max_gram": 20
          }
        }
      }
    }
  },
  "mappings": {
    "subject": {
      "index_analyzer": "new_index_analyzer",
      "search_analyzer": "str_search_analyzer",
      "_source": {
        "enabled": true,
        "compress": true
      },
      "properties": {
        "label": {
          "type": "string",
          "index": "analyzed"
        }
      }
    },
    "work": {
      "index_analyzer": "str_index_analyzer",
      "search_analyzer": "str_search_analyzer",
      "_source": {
        "enabled": true,
        "compress": true
      },
      "properties": {
        "_id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "title": {
          "type": "string",
          "index": "analyzed"
        },
        "creator": {
          "properties": {
            "id": {
              "type": "string",
              "index": "not_analyzed"
            },
            "name": {
              "type": "string",
              "index": "analyzed"
            },
            "role": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "subject": {
          "type": "string",
          "index": "analyzed"
        },
        "edition": {
          "properties": {
            "id": {
              "type": "string",
              "index": "not_analyzed"
            },
            "title": {
              "type": "string",
              "index": "analyzed"
            },
            "subtitle": {
              "type": "string",
              "index": "analyzed"
            },
            "year": {
              "type": "short"
            },
            "format": {
              "type": "string",
              "index": "not_analyzed"
            },
            "language": {
              "type": "string",
              "index": "not_analyzed"
            },
            "creator": {
              "properties": {
                "id": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "name": {
                  "type": "string",
                  "index": "analyzed"
                },
                "role": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            }
          }
        }
      }
    }
  }
}